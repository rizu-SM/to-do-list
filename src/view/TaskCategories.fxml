<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="569.0" prefWidth="636.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TaskCategoriesController">
    <children>
        <Pane layoutX="26.0" layoutY="14.0" prefHeight="533.0" prefWidth="581.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #A1A3AB; -fx-border-width: 1px;">
            <children>
                <Text layoutX="40.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Categories" underline="true">
                    <font>
                        <Font name="Trebuchet MS" size="14.0" />
                    </font>
                </Text>
                <Hyperlink fx:id="goBackLink" layoutX="501.0" layoutY="7.0" onAction="#showDashboard" text="Go back" underline="true">
                    <font>
                        <Font name="Trebuchet MS" size="14.0" />
                    </font>
                </Hyperlink>
                
                <VBox layoutX="40.0" layoutY="38.0" spacing="20" prefWidth="515.0">
                    <children>
                        <!-- Form to add new category -->
                        <Pane prefHeight="100.0" prefWidth="515.0" style="-fx-border-style: solid; -fx-border-color: A1A3AB; -fx-border-width: 1px;">
                            <children>
                                <Text layoutX="14.0" layoutY="18.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add New Category">
                                    <font>
                                        <Font name="Trebuchet MS" size="14.0" />
                                    </font>
                                </Text>
                                <TextField fx:id="categoryNameField" layoutX="18.0" layoutY="30.0" prefWidth="479.0" promptText="Enter category name" style="-fx-background-color: FFFF; -fx-border-style: solid; -fx-border-color: A1A3AB; -fx-border-radius: 5;">
                                    <font>
                                        <Font name="Calisto MT" size="12.0" />
                                    </font>
                                </TextField>
                                <Button fx:id="addCategoryButton" layoutX="18.0" layoutY="70.0" mnemonicParsing="false" onAction="#handleAddCategory" style="-fx-background-color: FF6767;" text="Add Category" textFill="WHITE">
                                    <font>
                                        <Font name="Trebuchet MS" size="14.0" />
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                            </children>
                        </Pane>
                        
                        <!-- List of existing categories -->
                        <Pane prefHeight="300.0" prefWidth="515.0" style="-fx-border-style: solid; -fx-border-color: A1A3AB; -fx-border-width: 1px;">
                            <children>
                                <Text layoutX="14.0" layoutY="18.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Existing Categories">
                                    <font>
                                        <Font name="Trebuchet MS" size="14.0" />
                                    </font>
                                </Text>
                                <ListView fx:id="categoriesListView" layoutX="18.0" layoutY="30.0" prefHeight="250.0" prefWidth="479.0" style="-fx-background-color: FFFF; -fx-border-style: solid; -fx-border-color: A1A3AB; -fx-border-radius: 5;" />
                            </children>
                        </Pane>
                    </children>
                </VBox>
            </children>
        </Pane>
    </children>
</Pane> 
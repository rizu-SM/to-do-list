<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainController">
    <children>
        <BorderPane style="-fx-background-color: white; -fx-background-radius: 10;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <HBox spacing="0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    
                    <!-- Login form container -->
                    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

                        <!-- Title -->
                        <Text style="-fx-font-weight: bold;" text="Sign In">
                            <font>
                                <Font name="System Bold" size="24" />
                            </font>
                        </Text>

                        <!-- Email input -->
                        <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                            <ImageView fitHeight="20" fitWidth="20" opacity="0.6">
                                <image>
                                    <Image url="@images/email%20(1).png" />
                                </image>
                            </ImageView>
                            <TextField fx:id="emailField" promptText="Enter your Email" 
                                style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS" />
                        </HBox>

                        <!-- Password input -->
                        <HBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="10">
                            <ImageView fitHeight="20" fitWidth="20" opacity="0.7">
                                <image>
                                    <Image url="@images/padlock%20(2).png" />
                                </image>
                            </ImageView>
                            <PasswordField fx:id="passwordField" promptText="Enter your Password" 
                                style="-fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS" />
                        </HBox>

                        <!-- Remember me checkbox -->
                        <CheckBox text="Remember Me" />

                        <!-- Login Button -->
                        <Button text="Login" onAction="#afficherDashboard" 
                            style="-fx-background-color: #FF6767; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10;" />

                        <!-- Link -->
                        <HBox alignment="CENTER" spacing="5">
                            <Text text="Don't have an account?" />
                            <Hyperlink onAction="#afficherLogInForm" text="Create one" textFill="#008bd9" />
                        </HBox>
                    </VBox>
         
                    <!-- Image area -->
                    <StackPane style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <ImageView fitHeight="321.0" fitWidth="429.0" preserveRatio="true" smooth="true">
                            <image>
                                <Image url="@images/Milnbank-Rent-Vector.png" />
                            </image>
                        </ImageView>
                    </StackPane>
                </HBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
